<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_3"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/sp_10">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sales"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toEndOf="@+id/viewCircleTextView"
                app:layout_constraintTop_toTopOf="@+id/viewCircleTextView" />

            <ImageView
                android:id="@+id/graph"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/locate_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.42"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="KES 20,00"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/viewCircleTextView"
                app:layout_constraintStart_toEndOf="@+id/viewCircleTextView"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <ImageView
                android:id="@+id/textView18"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_6"
                android:src="@drawable/next_icon"
                app:layout_constraintBottom_toBottomOf="@+id/graph"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/graph"
                app:layout_constraintTop_toTopOf="@+id/graph" />

            <TextView
                android:id="@+id/viewCircleTextView"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="S"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:fontFamily="@font/pt_sans_bold"
                android:background="@drawable/circle_blue" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>